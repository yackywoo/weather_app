<!-- Weather history table -->
<div class="container mt-5">
  <h2 class="mb-4 text-center">Weather History for <%= email %></h2>

  <% if (weatherHistory.length > 0) { %>
    <div class="table-responsive">
      <table class="table table-dark table-striped table-hover">
        <thead class="text-center">
          <tr>
            <th>Date</th>
            <th>Zipcode</th>
            <th>Temperature (°F)</th>
            <th>Wind Speed (mph)</th>
            <th>Weather</th>
          </tr>
        </thead>
        <tbody>
          <% weatherHistory.forEach(entry => { %>
            <tr class="text-center">
              <td><%= new Date(entry.date).toLocaleString() %></td>
              <td><%= entry.zipcode %></td>
              <td><%= entry.temperature %>°F</td>
              <td><%= entry.windspeed %> mph</td>
              <td><%= weatherIcons[entry.weather_code] || "Unknown" %> <%= weatherDescriptions[entry.weather_code] || "Unknown" %> </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  <% } else { %>
    <div class="alert alert-info text-center">No weather history available.</div>
  <% } %>
</div>


<% if (typeof error !== "undefined") { %>
  alert("<%= error %>");
